{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "jest": true,
        "browser": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-extraneous-dependencies": [
        "error",
        {
            "devDependencies": true
        }
        ],
        "react/jsx-filename-extension": [
        1,
        {
            "extensions": [
            ".js",
            ".jsx"
            ]
        }
        ],
        "no-underscore-dangle": [
        "error",
        {
            "allow": [
            "_id",
            "_key",
            "_type",
            "_createdAt"
            ]
        }
        ],
        "no-unused-expressions": [
        "error",
        {
            "allowShortCircuit": true,
            "allowTernary": true
        }
        ]
    }
}
  